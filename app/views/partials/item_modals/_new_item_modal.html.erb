<div class="modal">
  <label for="new-item-modal">
    <div class="modal-trigger">Create New Item</div>
  </label>
  <input class="modal-state" id="new-item-modal" type="checkbox" />
  <div class="modal-fade-screen">
    <div class="modal-inner">
      <div class="modal-close" for="new-item-modal"></div>
      <h1>Create New Item</h1>
      <%= form_for(@itemNew, remote:true) do |f| %>
        <%= f.label :name, 'Item Name' %>
        <%= f.text_field :name, :placeholder =>"Chicken Sandwich", class: "form-control item_name" %>

        <%= f.label :section_name, 'Section_name' %>
        <%= f.collection_select :section_name, Section.order(:name),:name,:name, include_blank: true %>

        <%= f.label :price, 'Price' %>
        <%= f.number_field :price, :step => 'any', :placeholder =>'5.00', class: "form-control item_price" %>

        <%= f.label :description, 'Description' %>
        <%= f.text_field :description, :placeholder =>"A warm chicken patty in a toasted bun", class: "form-control item_description" %>

        <%= f.label :ingredients, 'Ingredients' %>
        <%= f.text_field :ingredients, :placeholder =>'Chicken, Whole Wheat Bun, Mayo', class: "form-control item_ingredients" %>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>