<div class="modal">
  <label for="new-<%=section.name%>-modal">
    <div class="modal-trigger">
      <div class="add-item">
        <i class="fa fa-plus"></i>
       </div>
    </div>
  </label>
  <input class="modal-state" id="new-<%=section.name%>-modal" type="checkbox" />
  <div class="modal-fade-screen">
    <div class="modal-inner">
      <div class="modal-close" for="new-<%=section.name%>-modal"></div>
      <fieldset class="form-fields-container">
      <legend>Add Item to <%= section.name.capitalize %> section</legend>
      <%= form_for(@itemNew, remote:true) do |f| %>
        <%= f.label :name, 'Item Name' %>
        <%= f.text_field :name, :placeholder =>"Chicken Sandwich", class: "section_#{section.id}_new_item_name required-field" %>

        <%= f.label :section_name, 'Menu Section' %>
        <%= f.collection_select :section_id, current_user.sections.all, :id, :name, :selected => section.id %>

        <%= f.label :price, 'Price' %>
        <%= f.number_field :price, :step => 'any', :placeholder =>'5.00', class: "section_#{section.id}_new_item_price required-field" %>

        <%= f.label :description, 'Description' %>
        <%= f.text_field :description, :placeholder =>"A warm chicken patty in a toasted bun", class: "section_#{section.id}_new_item_description required-field" %>

        <%= f.label :ingredients, 'Ingredients' %>
        <%= f.text_field :ingredients, :placeholder =>'Chicken, Whole Wheat Bun, Mayo', class: "item_ingredients" %>
        
        <%= f.label :item_picture, 'Item Picture' %>
        <div class="field">
          <%= f.file_field :item_picture %>
        </div>
        
        <%= f.submit "Create Item" , data: {disable_with: "Creating Item"}, :class=>"new-section-#{section.id}-item-button" %>
      <% end %>
    </div>
  </div>
</div>