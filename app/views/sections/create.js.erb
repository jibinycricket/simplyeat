$('.modal-close').click();
$(".section_name").val('');
$(".sections-list").append('<%= j render :partial => 'users/ajax_section', :locals =>{:section => @section, :sections => @sections} %>');
$("#section-<%= @section.id %>").hide().fadeIn(1000);

<% @items.each do |item| %>
  $(".item_<%= item.id %>_dropdown").append('<%= j render :partial => 'users/ajax_dropdown', :locals =>{:section => @section} %>')
<% end %>

$(function() {
  $("#modal-1, #modal2").on("change", function() {
    if ($(this).is(":checked")) {
      $("body").addClass("modal-open");
    } else {
      $("body").removeClass("modal-open");
    }
  });

  $(".modal-fade-screen, .modal-close").on("click", function() {
    $(".modal-state:checked").prop("checked", false).change();
  });

  $(".modal-inner").on("click", function(e) {
    e.stopPropagation();
  });
});




