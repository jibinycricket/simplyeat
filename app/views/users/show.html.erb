<div class="page-container">
  <div class="menu-layout">
    <div class="create-buttons">
      <% if current_user %>
        <%= render :partial => 'partials/section_modals/new_section_modal', :locals => {:@sectionNew => current_user.sections.build} %>
        <%= render :partial => 'partials/item_modals/new_item_modal', :locals =>{:@itemNew => current_user.items.build} %>
      <% end %>
    </div>
    <br class="wrapper"/>
    <section class="menu">
      <div class="sections-list">
        <% @sections.each do |section| %>
          <div class="section">
            <ul id="section-<%=section.id%>">
              <li class="section-name">
                <%= section.name %>
              </li>
              <% if current_user %>
                <li>
                  <%= link_to section, method: :delete do %>
                    <div class="delete-section">
                      <i class="fa fa-trash-o"></i>
                    </div>
                  <% end %>
                </li>
                <li>
                  <%= render :partial => 'partials/section_modals/edit_section_modal', :locals => {:@sectionEdit => section} %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="items-list">
        <% @items.each do |item| %>
          <li><%= item.name %></li>
        <% end %>
      </div>
    </section>
  </div>
</div>
