<%= form_for @item do |f| %>
  <%= f.label :name, 'Item Name' %>
  <%= f.text_field :name %>

  <%= f.label :section_name, 'Menu Section' %>
  <%= f.collection_select :section_id, Section.all, :id, :name %>

  <%= f.label :price, 'Price' %>
  <%= f.number_field :price, :step => 'any'%>

  <%= f.label :description, 'Description' %>
  <%= f.text_field :description%>

  <%= f.label :ingredients, 'Ingredients' %>
  <%= f.text_field :ingredients%>

  <%= f.submit %>
<% end %>